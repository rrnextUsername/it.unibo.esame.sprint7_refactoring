QActor fridge_cmd_solver context ctxButler {
	
	State s0 initial {
		solve( consult("sysRules.pl")	 ) 				
		
		//run itunibo.coap.modelResourceCoap.create( myself, "resourcemodel" ) //CoAP access	
		
		emit exposeFood : exposeFood	
	}Goto waitCmd
	
