QActor fridge_model_handler context ctxButler{
	["var DoneStatus = \"null\" "]
	
	State s0 initial{		
		solve( consult("sysRules.pl")	 ) 	
		      
		solve( consult("fridgeModel.pl")	 ) 
		
		solve( consult("dataFunctions.pl")	 ) 
		
		solve( showResourceModel ) 
		
	} Goto waitCmd
	
	State waitCmd{		
	} Transition t0 whenMsg fridge_handleAdd -> handleAdd
					whenMsg fridge_handleRemove -> handleRemove
					whenMsg fridge_handleQuery -> handleQuery
					whenMsg fridge_handleExposeFood -> handleExposeFood
	
	
	State handleAdd{
		onMsg (fridge_handleAdd : fridge_handleAdd( NAME, CATEG ) ){
			printCurrentMessage			
			
			solve( aggiungi( frigoInv, $payloadArg(0) , $payloadArg(1)) )			
			solve( assert(done(handleAdd, $payloadArg(0) , $payloadArg(1) ))) // testing
			solve( showResourceModel ) 	
			
			
			
			solve( inventario(frigoInv, L ))				
			["val Inventario = getCurSol(\"L\").toString()"]			
			run itunibo.robot.resourceModelSupport.updateFridgeModel( myself, Inventario)
		}
	} Goto done
	
	State handleRemove{
		onMsg (fridge_handleRemove : fridge_handleRemove( NAME, CATEG ) ){
			printCurrentMessage			
			
			solve( rimuovi( frigoInv, $payloadArg(0) , $payloadArg(1)) )			
			solve( assert(done(handleRemove, $payloadArg(0) , $payloadArg(1) ))) // testing
			solve( showResourceModel ) 		
			
			
			solve( inventario(frigoInv, L ))				
			["val Inventario = getCurSol(\"L\").toString()"]			
			run itunibo.robot.resourceModelSupport.updateFridgeModel( myself, Inventario)
		}
	} Goto done
	
	State handleQuery{
		onMsg ( fridge_handleQuery : fridge_handleQuery( NAME, CATEG)){
			printCurrentMessage
					
			solve( assert(done(handleQuery, $payloadArg(0) , $payloadArg(1) ))) // testing
			solve( presenza(frigoInv, $payloadArg(0),$payloadArg(1)) )
			
			ifSolved {
				["DoneStatus = \"present\" "]
			} else {				
				["DoneStatus = \"absent\" "]
			}
		}
	}Goto done
	
	State handleExposeFood{	
		onMsg( fridge_handleExposeFood : fridge_handleExposeFood){
			printCurrentMessage
			
			solve( inventario( frigoInv , INVENTORY ) )
			
			solve( inventario(frigoInv, L ))				
			["val Inventario = getCurSol(\"L\").toString()"]			
			run itunibo.robot.resourceModelSupport.updateFridgeModel( myself, Inventario)
				
			emit modelContent :  modelContent( frigo (Inventario) ) 
		}
	} Goto done
	
	State done{
		forward fridge_cmd_solver -m fridge_done : fridge_done( $DoneStatus)
	} Goto waitCmd
	
	
}
